﻿@using REMOTEMIND_EASY.Core.Application.ViewModels.User;
@model List<UserViewModel>
@{
    ViewData["Title"] = "Mant. Usuarios";
}

<div class="text-center mt-3">
    <h3>Listado de Usuarios</h3>
</div>

<div class="mg-3">
    <div>
        <a class="btn btn-outline-success mb-5 col-lg-6 offset-3" asp-controller="User" asp-action="Register">Agregar Usuario</a>
    </div>
</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nombre</th>
            @* <th scope="col">Apellido</th> *@
            <th scope="col">Nombre de usuario</th>
        @*     <th scope="col">Email</th>
            <th scope="col">Rol</th> *@
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Count == 0)
        {
            <div class="col">
                <h1>No hay ningún elemento en la base de datos</h1>
            </div>
        }
        else
        {

            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@item.Name</td>
                    <td>@item.Username</td>
                    @* <th>@item.RoleName</th> *@
                    <td><a asp-controller="User" asp-action="Detail" asp-route-id=@item.Id class="btn btn-outline-info">Ver</a></td>
                    <td><a asp-controller="User" asp-action="Delete" asp-route-id=@item.Id class="btn btn-outline-info">Eliminar</a></td>
                </tr>
            }

        }
    </tbody>
</table>