@using REMOTEMIND_EASY.Core.Application.ViewModels.Result;
@model List<ResultViewModel>;
@{
    var userName = ViewBag.Name;
    ViewData["Title"] = "List";
}

<div class="text-center mt-3">
    <h3>Resultados de <i><u>@userName</u></i></h3>
</div>

<table class="table">
    <thead class="bg-all">
        <tr class="text-white">
            <th scope="col">Fecha</th>
            <th scope="col">Test</th>
            <th scope="col">Porcentaje de estres</th> 
            <th scope="col">Recomendacion</th>
            @* <th scope="col">Email</th> *@
           @*  <th scope="col">Rol</th> *@
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Count == 0)
        {
            <div class="col">
                <h1>No hay ningún resultado, favor de completar el test</h1>
            </div>
        }
        else
        {

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date</td>
                    <td>@item.Name</td>
                    <td>@item.TotalValue %</td>
                    <td>@item.Recomendation</td>
                    @* <td><a asp-controller="User" asp-action="Delete" asp-route-id=@item.Id class="btn btn-outline-info">Eliminar</a></td> *@
                </tr>
            }

        }
    </tbody>
</table>

