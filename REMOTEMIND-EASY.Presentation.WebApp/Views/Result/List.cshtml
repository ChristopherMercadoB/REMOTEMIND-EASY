@using REMOTEMIND_EASY.Core.Application.ViewModels.Result;
@model List<ResultViewModel>;
@{
    ViewData["Title"] = "List";
}

<div class="text-center mt-3">
    <h3>Resultados del usuario</h3>
</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Fecha</th>
            <th scope="col">Resultado</th> 
            <th scope="col">Recomendacion</th>
            @* <th scope="col">Email</th> *@
           @*  <th scope="col">Rol</th> *@
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Count == 0)
        {
            <div class="col">
                <h1>No hay ningún elemento en la base de datos</h1>
            </div>
        }
        else
        {

            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row"></td>
                    <td></td>
                    <th></th>
                    <td><a asp-controller="User" asp-action="Delete" asp-route-id=@item.Id class="btn btn-outline-info">Eliminar</a></td>
                </tr>
            }

        }
    </tbody>
</table>

