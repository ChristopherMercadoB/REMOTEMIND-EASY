@using REMOTEMIND_EASY.Core.Application.ViewModels.Result;
@model ResultViewModel;
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title text-center">Seguro que deseas eliminar este resultado</h1>
                    <form method="post" asp-controller="Result" asp-action="DeletePost">
                        <div class="form-group">
                            <input type="hidden" asp-for="Id">
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-danger">
                                Aceptar
                            </button>
                            <a class="btn btn-warning ml-2" asp-controller="Result" asp-action="List">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>